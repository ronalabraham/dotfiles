# want vi to be the default editor for readline
set editing-mode vi
set show-mode-in-prompt On

# vi settings
$if mode=vi
    # command mode
    set keymap vi-command
    "gg": beginning-of-history
    "G": end-of-history

    # insert mode
    set keymap vi-insert
    "jk": vi-movement-mode # remap escape
    "\C-l": clear-screen
$endif
